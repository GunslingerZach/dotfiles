#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="sway"
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}

lock(){
    mpc pause
    pauseallmpv
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
    swaylock
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
}

case "$(printf "ğŸ’¤ sleep\nğŸ–¥ï¸shutdown\nğŸ”ƒ reboot\nğŸ”’ lock\nğŸšª leave $WM\nğŸ» hibernate" | tofi --prompt-text 'Action: ')" in
	'ğŸ”’ lock') swaylock -C $HOME/.config/sway/swaylock/config ;;
	"ğŸšª leave $WM") killall sway ;;
	'ğŸ» hibernate') swaylock -C $HOME/.config/sway/swaylock/config & $ctl hibernate -i ;;
	'ğŸ’¤ sleep') swaylock -C $HOME/.config/sway/swaylock/config & $ctl suspend ;;
	'ğŸ”ƒ reboot') $ctl reboot -i ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff -i ;;
	*) exit 1 ;;
esac
