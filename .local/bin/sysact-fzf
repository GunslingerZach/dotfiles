#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="sway"
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}

lock(){
    mpc pause
    pauseallmpv
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
    swaylock -C $HOME/.config/sway/swaylock/config
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
}

case "$(printf "ğŸ’¤ sleep\nğŸ–¥ï¸shutdown\nğŸ”ƒ reboot\nğŸ”’ lock\nğŸšª leave $WM\nâ™»ï¸ renew $WM" | fzf --disabled --cycle --bind k:up,j:down)" in
	'ğŸ”’ lock') lock ;;
	"ğŸšª leave $WM") kill -TERM "$(wmpid)" ;;
	"â™»ï¸ renew $WM") sway-relaunch ;;
	'ğŸ’¤ sleep') swaylock -C $HOME/.config/sway/swaylock/config & $ctl suspend ;;
	'ğŸ”ƒ reboot') $ctl reboot ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff ;;
	*) exit 1 ;;
esac
